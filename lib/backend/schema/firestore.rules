      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/order_services/{document} {
      allow read: if true;
    }


    match /faqs/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }
  }
}
